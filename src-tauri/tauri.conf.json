{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "devPath": "http://localhost:3000",
        "distDir": "../out"
    },
    "package": {
        "productName": "Steam Game Idler",
        "version": "1.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "fs": {
                "scope": [
                    "$RESOURCE/*"
                ]
            }
        },
        "bundle": {
            "active": true,
            "category": "Utility",
            "copyright": "Copyright Â© 2024 ProbablyRaging",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.ico"
            ],
            "identifier": "com.probablyraging.steam-game-idler",
            "longDescription": "Idle any game in your Steam library. All you need is your Steam username or ID64. No password, token, or any other login information needed.",
            "shortDescription": "Idle any game in your Steam library.",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [
                "lib/*"
            ],
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "width": 1120,
                "height": 600,
                "resizable": false,
                "title": "Steam Game Idler"
            }
        ]
    }
}